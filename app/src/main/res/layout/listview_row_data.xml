<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="190dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/degalinesPavadinimas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viada"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/degalinesAdresas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="Ukmerges g 437 Vilnius"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="200dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Benzinas" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dyzelinas" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dujos" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/benzinas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.80 EUR" />

        <TextView
            android:id="@+id/dyzelis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.50 EUR" />

        <TextView
            android:id="@+id/dujos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.50 EUR"
            android:layout_gravity="right"/>
    </LinearLayout>


</RelativeLayout>